<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="#D1CECE">


    <ImageView
            android:layout_width="118dp"
            android:layout_height="121dp" app:srcCompat="@drawable/album_cover"
            android:id="@+id/logo"
            android:background="@null" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Starboy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/songName" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/logo" android:textColor="#063375"
            android:fontFamily="@font/cabin" android:textSize="24sp" android:textStyle="bold"/>
    <TextView
            android:text="The Weekend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/artist"
            app:layout_constraintTop_toBottomOf="@+id/songName" android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/logo" android:textColor="#0E0D0D"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_prev"
            android:id="@+id/imageButton10" android:background="@null" android:layout_marginStart="52dp"
            app:layout_constraintStart_toEndOf="@+id/logo" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/artist"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_play_small"
            android:id="@+id/imageButton11"
            android:background="@null" android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/imageButton10" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/artist"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_next"
            android:id="@+id/imageButton12" android:background="@null" android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/imageButton11" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="73dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_close"
            android:id="@+id/imageButton13" android:background="@null" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>