<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@color/colorBase">

    <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="636dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent">
            <ImageButton
                    android:layout_width="67dp"
                    android:layout_height="70dp" app:srcCompat="@drawable/ic_favorite"
                    android:id="@+id/favorite" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="39dp"
                    android:background="@null"
            />
            <ImageButton
                    android:layout_width="67dp"
                    android:layout_height="70dp"
                    android:id="@+id/shuffle" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@+id/favorite"
                    android:background="@null"
            />
            <ImageButton
                    android:layout_width="67dp"
                    android:layout_height="70dp"
                    android:id="@+id/repeat" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@+id/shuffle"
                    android:background="@null"
            />
            <ImageButton
                    android:layout_width="67dp"
                    android:layout_height="70dp" app:srcCompat="@drawable/ic_playlist"
                    android:id="@+id/playlist" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@+id/repeat" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="39dp"
                    android:background="@null"
            />
            <ImageView
                    android:layout_width="218dp"
                    android:layout_height="334dp" app:srcCompat="@drawable/album_cover"
                    android:id="@+id/album_cover"
                    app:layout_constraintStart_toEndOf="@+id/favorite"
                    app:layout_constraintEnd_toStartOf="@+id/playlist"
                    app:layout_constraintTop_toBottomOf="@+id/shuffle" app:layout_constraintHorizontal_bias="0.514"
                    android:background="@null"
            />
            <SeekBar
                    android:id="@+id/sBar"
                    android:layout_width="357dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/artist"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            />
            <TextView
                    android:text="Starboy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/song_name" android:textSize="28sp"
                    android:textColor="@color/colorBase" app:layout_constraintTop_toBottomOf="@+id/album_cover"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:textStyle="bold" android:fontFamily="@font/cabin"
            />
            <TextView
                    android:text="The Weekend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/artist" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/song_name" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cabin"
                    android:textColor="@color/cardview_dark_background" android:textSize="16sp"/>
            <TextView
                    android:text="00:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_start" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/sBar"/>
            <TextView
                    android:text="04:50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_end" android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/sBar"/>
            <ImageButton
                    android:layout_width="114dp"
                    android:layout_height="86dp"
                    android:id="@+id/play" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/sBar" android:layout_marginStart="24dp"
                    app:layout_constraintStart_toEndOf="@+id/prev"
                    android:background="@null"

            />
            <ImageButton
                    android:layout_width="67dp"
                    android:layout_height="63dp" app:srcCompat="@drawable/ic_prev"
                    android:id="@+id/prev" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/sBar" app:layout_constraintEnd_toStartOf="@+id/play"
                    android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="48dp"
                    android:background="@null"
            />
            <ImageButton
                    android:layout_width="67dp"
                    android:layout_height="63dp" app:srcCompat="@drawable/ic_next"
                    android:id="@+id/next" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/sBar" android:layout_marginStart="24dp"
                    app:layout_constraintStart_toEndOf="@+id/play"
                    android:background="@null"
            />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>